{% extends '::base.html.twig' %}

{% block title %}Football 3x3{% endblock %}

{% block stylesheets %}
    {% stylesheets filter="cssrewrite"
    'bundles/footballnews/css/base.css'
    output='css/dist.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <section id="wrapper">
        <header id="header">
            <div class="logo">
                <a href="{{ path('_welcome') }}">
                    <img src="http://football3x3.kiev.ua/wp-content/themes/football/img/logo.png" width="200" height="200" alt="Football 3x3 Logo" />
                </a>
            </div>

            <ul class="social-links">
                <li><a class="vk" href="#">Vkontakte</a></li>
                <li><a class="fb" href="#">Facebook</a></li>
            </ul>
        </header>

        {% block navigation %}
            <nav>
                <ul class="navigation">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        {% endblock %}

        <section class="main-col">
            {% block content %}{% endblock %}
        </section>

        <aside class="sidebar">
            {% block sidebar %}{% endblock %}
        </aside>

        <div id="footer">
            {% block footer %}
                Symfony2 blog tutorial - created by <a href="https://github.com/dsyph3r">dsyph3r</a>
            {% endblock %}
        </div>
    </section>
{% endblock %}
