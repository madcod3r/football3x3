{% extends 'FootballNewsBundle:Default:base.html.twig' %}

{% block javascripts %}
    {% javascripts
    '@FootballNewsBundle/Resources/public/js/jquery-1.8.3.min.js'
    '@FootballNewsBundle/Resources/public/js/jquery.hashchange.min.js'
    '@FootballNewsBundle/Resources/public/js/slider.js'
    '@FootballNewsBundle/Resources/public/js/jquery.easytabs.min.js'
    output='bundles/footballnews/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $('#tab-container').easytabs();
    </script>
{% endblock %}

{% block title %}Главная | Football 3x3{% endblock %}

{% block content %}
    <div class="slider">
        <div class="slides">
            <ul>
                {% for event in events %}
                <li class="active">
                    <img class="small-img" src="{{ event.image }}" width="100" height="75" />
                    <b class="small-caption">{{ event.name }}</b>
                </li>
                {% endfor %}
            </ul>
        </div>
        <div class="big-slide">
            <img class="big-img" height="400" width="650" />
            <span class="big-caption"></span>
        </div>
    </div>

    <h2>Кращі команди<span class="alt-heading">(Сезон / зима 2012)</span></h2>

    <div id="tab-container" class="tab-container">
        <ul class="etabs">
            <li class="tab"><a href="#tab-jfl-3x3-8-9">JFL 3x3 (8-9)</a></li>
            <li class="tab"><a href="#tab-jfl-3x3-10-11">JFL 3x3 (10-11)</a></li>
            <li class="tab"><a href="#tab-jfl-3x3-12-14">JFL 3x3 (12-14)</a></li>
            <li class="tab"><a href="#tab-jfl-3x3-15-17">JFL 3x3 (15-17)</a></li>
            <li class="tab"><a href="#tab-sfl-3x3-18-23">SFL 3x3 (18-23)</a></li>
        </ul>
        <div class="content" id="tab-jfl-3x3-8-9">
            <h3>Junior Football League 3x3 (8-9)</h3>
            <table class="table">
                <tbody>
                <tr>
                    <td class="team-image"><img src="http://football3x3.kiev.ua/wp-content/uploads/2011/12/x_fd85d5ae.jpg" height="60" /></td>
                    <td>Комманда ла-ла-лаб бла-бла-бла</td>
                </tr>
                <tr>
                    <td class="team-image"><img src="http://football3x3.kiev.ua/wp-content/uploads/2011/12/x_fd85d5ae.jpg" height="60" /></td>
                    <td>Комманда ла-ла-лаб бла-бла-бла</td>
                </tr>
                <tr>
                    <td class="team-image"><img src="http://football3x3.kiev.ua/wp-content/uploads/2011/12/x_fd85d5ae.jpg" height="60" /></td>
                    <td>Комманда ла-ла-лаб бла-бла-бла</td>
                </tr>
                <tr>
                    <td class="team-image"><img src="http://football3x3.kiev.ua/wp-content/uploads/2011/12/x_fd85d5ae.jpg" height="60" /></td>
                    <td>Комманда ла-ла-лаб бла-бла-бла</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="content" id="tab-jfl-3x3-10-11">
            <h3>Junior Football League 3x3 (10-11)</h3>
        </div>
        <div class="content" id="tab-jfl-3x3-12-14">
            <h3>Junior Football League 3x3 (12-14)</h3>
        </div>
        <div class="content" id="tab-jfl-3x3-15-17">
            <h3>Junior Football League 3x3 (15-17)</h3>
        </div>
        <div class="content" id="tab-sfl-3x3-18-23">
